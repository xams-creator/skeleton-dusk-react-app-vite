{
    "name": "skeleton-dusk-react-app-vite",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "start": "vite",
        "build": "tsc && vite build --outDir=build",
        "preview": "vite preview --outDir=build"
    },
    "dependencies": {
        "@xams-framework/common": "^0.1.3",
        "@xams-framework/dusk": "^2.0.0",
        "@xams-framework/dusk-plugin-vite": "^1.0.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "lodash": "^4.17.21"
    },
    "devDependencies": {
        "@types/node": "^20.14.9",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@types/redux-logger": "^3.0.13",
        "@vitejs/plugin-react": "^4.3.1",
        "@vitejs/plugin-react-swc": "^3.7.0",
        "@xams-framework/vite-plugin-dusk": "^0.0.4",
        "@types/lodash": "^4.14.202",
        "postcss-preset-env": "^9.5.15",
        "prettier": "^3.3.2",
        "sass": "^1.77.6",
        "typescript": "^5.5.3",
        "vite": "^5.3.2"
    },
    "prettier": {
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "printWidth": 120,
        "useTabs": false,
        "jsxSingleQuote": false,
        "bracketSpacing": true,
        "htmlWhitespaceSensitivity": "css",
        "arrowParens": "avoid",
        "endOfLine": "crlf",
        "trailingComma": "es5",
        "importOrderSeparation": true,
        "importOrder": [
            "^react(.*)$",
            "<THIRD_PARTY_MODULES>",
            "^@/(.*)$",
            "^src/(.*)$",
            "^[./]"
        ],
        "importOrderSortSpecifiers": true,
        "plugins": [
            "@trivago/prettier-plugin-sort-imports"
        ],
        "importOrderParserPlugins": [
            "typescript",
            "jsx",
            "decorators"
        ]
    }
}
